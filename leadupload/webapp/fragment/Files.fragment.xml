<core:FragmentDefinition
    xmlns='sap.m'
    xmlns:l='sap.ui.layout'
    xmlns:f='sap.ui.layout.form'
    xmlns:core='sap.ui.core'
    xmlns:t='sap.ui.table'
>
    <Dialog
        id="idDialog"
        draggable="true"
        contentHeight='17rem'
        contentWidth='40rem'
        resizable="false"
        showHeader="true"
        title="{i18n>AvailableFiles} ({gModelRef>/LeadList/Files/count})"
    >
        <t:Table
            id='idTable'
            rows="{path: 'gModelRef>/LeadList/Files/rows', templateShareable:false}"
            selectionMode="Single"
            selectionBehavior="RowOnly"
            visibleRowCount="7"
            ariaLabelledBy="title"
            width="100%"
            rowSelectionChange='handleFileSelection'
        >
            <t:columns>
                <t:Column
                    id='idColumn'
                    resizable="true"
                    sortProperty="name"
                    filterProperty="Name"
                    showFilterMenuEntry="false"
                    showSortMenuEntry="true"
                >
                    <Label
                        id='idLabel'
                        textAlign="Center"
                        text="{i18n>Name}"
                    />
                    <t:template>
                        <Text
                            id='idText'
                            text="{path: 'gModelRef>Name', formatter:'.formatter.fnSplitFileName'}"
                            tooltip="{path: 'gModelRef>Name', formatter:'.formatter.fnSplitFileName'}"
                            wrapping="false"
                            wrappingType="Normal"
                        />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
        <buttons>
            <Button
                id='idButton'
                text="{i18n>Cancel}"
                press='handleCancel'
                tooltip='{i18n>Cancel}'
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
